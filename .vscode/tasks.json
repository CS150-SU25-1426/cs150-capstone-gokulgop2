{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Capstone",
            "type": "cppbuild",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // All .cpp files must be listed here
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/Book.cpp",
                "${workspaceFolder}/BookList.cpp",
                "-o",
                "${workspaceFolder}/Capstone"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}